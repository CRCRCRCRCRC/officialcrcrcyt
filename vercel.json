{
    "buildCommand":  "cd frontend \u0026\u0026 npm install \u0026\u0026 npm run build",
    "outputDirectory":  "frontend/dist",
    "installCommand":  "npm install \u0026\u0026 cd backend \u0026\u0026 npm install",
    "functions":  {
                      "api/proxy.js":  {
                                           "maxDuration":  30,
                                           "includeFiles":  "backend/**"
                                       }
                  },
    "rewrites":  [
                     {
                         "destination":  "/api/proxy?slug=$1",
                         "source":  "/api/(.*)"
                     },
                     {
                         "destination":  "/api/proxy",
                         "source":  "/api"
                     }
                 ]
}
