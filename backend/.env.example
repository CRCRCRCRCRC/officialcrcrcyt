# === 資料庫設定 ===
# PostgreSQL 資料庫連接字串 (使用 Supabase 或 Neon)
# DATABASE_URL=postgresql://user:password@host:port/database

# === Google OAuth 2.0 設定 ===
# Google OAuth 2.0 客戶端 ID 和密鑰
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 管理員 Google 帳號白名單 (逗號分隔)
ADMIN_GOOGLE_EMAILS=admin@example.com,admin2@example.com

# 管理員二次驗證密語
ADMIN_SECOND_FACTOR_PHRASE=your-admin-second-factor-phrase

# === JWT 設定 ===
# 管理員 JWT 密鑰
JWT_SECRET=your-jwt-secret-key

# 網站用戶 JWT 密鑰 (可選，默認為 JWT_SECRET)
# WEBSITE_JWT_SECRET=your-website-jwt-secret-key

# === YouTube API 設定 ===
# YouTube Data API v3 金鑰
YOUTUBE_API_KEY=your-youtube-api-key

# YouTube 頻道 ID 或 Handle
# YOUTUBE_CHANNEL_ID=your-youtube-channel-id
# YOUTUBE_CHANNEL_HANDLE=@your-youtube-channel-handle

# === 應用設定 ===
# 前端網址
FRONTEND_URL=http://localhost:5173

# 啟用密碼登入 (設置為 true 啟用)
ENABLE_PASSWORD_LOGIN=true

# === Vercel 部署設定 ===
# 熱門影片 ID (可選)
# FEATURED_VIDEO_ID=your-featured-video-id

# 縮圖品質 (可選: maxres, standard, high, medium, default)
# THUMBNAIL_QUALITY=maxres